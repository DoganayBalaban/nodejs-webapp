extends ../layouts/main-layout.pug

block styles 
  link(rel="stylesheet", href="/css/form.css")

block content 
  form(action="/admin/add-product" method="POST")
    .form-group.row
      label.col-sm-2.col-form-label(for="name") Name
      .col-sm-10
        input.form-control(type="text" name="name" id="name")
    .form-group.row
      label.col-sm-2.col-form-label(for="price") Fiyat
      .col-sm-10
        input.form-control(type="text" name="price" id="price")
    .form-group.row
        label.col-sm-2.col-form-label(for="image") Resim
        .col-sm-10
         input.form-control(type="text" name="image" id="image" )
    .form-group.row
      label.col-sm-2.col-form-label(for="categoryid") Category
      .col-sm-10
        select.form-control( name="cateoryid" id="categoryid")
          option(value="-1") Select Category 
          each category in categories
            option(value=`${category.id}`) #{category.name}

    .form-group.row
      label.col-sm-2.col-form-label(for="desc") Açıklama
      .col-sm-10
        textarea.form-control(cols="30" rows="10" name="desc" id="desc")
    .form-group.row
      .col-sm-10.offset-sm-2
         input.btn.btn-primary(type="submit" value="save")
