extends ../layouts/main-layout.pug

block styles 
  link(rel="stylesheet", href="/css/form.css")

block content 
  form(action="/admin/products" method="POST")

    input#id(type="hidden" name="id" value=`${product.id}`)
    .form-group.row
      label.col-sm-2.col-form-label(for="name") Name
      .col-sm-10
        input.form-control(type="text" name="name" id="name" value=`${product.name}`)
    .form-group.row
      label.col-sm-2.col-form-label(for="price") Price
      .col-sm-10
        input.form-control(type="text" name="price" id="price" value=`${product.price}`)
    .form-group.row
      label.col-sm-2.col-form-label(for="image") Resim
      .col-sm-10
        input.form-control(type="text" name="imageUrl" id="imageUrl" value=`${product.imageurl}`)
    .form-group.row
      label.col-sm-2.col-form-label(for="categoryid") Category
      .col-sm-10
        select.form-control( name="cateoryid" id="categoryid")
          option(value="-1") Select Category 
          each category in categories
            option(value=`${category.id}` selected=category.id===product.categoryid) #{category.name}
    .form-group.row
      label.col-sm-2.col-form-label(for="description") Açıklama
      .col-sm-10
        textarea.form-control(cols="30" rows="10" name="description" id="description") #{product.description}
    .form-group.row
      .col-sm-10.offset-sm-2
         input.btn.btn-primary(type="submit" value="save")
